

{% extends 'base.html.twig' %}

{% block title %}Ecom - Home{% endblock %}

{% block body %}
<div class="container my-4">
    <h1 class="text-center mt-5">Bienvenue chez AutoDeal</h1>
    <h2 class="text-center mb-5">Où chaque voiture raconte une histoire unique, la vôtre commence ici.</h2>
    <h2 class="mb-4 fw-bold">Nos Produits</h2>

    {% for category in categories %}
        <div class="category-section mb-5">
            <h3 class="category-title text-decoration-underline">{{ category.namename }}</h3>
            <div class="row justify-content-center">
                {% for product in category.products %}
                    <div class="col-6 col-sm-4 mb-4">
                        <div class="card h-100">
                            {% if product.img %}
                            <div class="image-container" style="height: 200px; overflow: hidden;">
                                <img src="{{ asset(product.img) }}" class="card-img-top img-fluid" style="object-fit: cover; height: 100%; width: 100%;" alt="{{ product.name }}">
                            </div>
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text">Description</p>
                                <p class="card-text">Prix: {{ product.priceHT }}€</p>
                                <a href="#" class="btn btn-outline-primary">Voir le produit</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}