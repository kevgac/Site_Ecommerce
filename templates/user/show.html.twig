{% extends 'base-admin.html.twig' %}

{% block title %}Ecom - Admin - User{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Informations utilisateur</h1>

        <div class="row">
            <div class="col-md-6">
                <table class="table">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>{{ user.id }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Email</th>
                            <td>{{ user.email }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Roles</th>
                            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Password</th>
                            <td>{{ user.password }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Lastname</th>
                            <td>{{ user.lastname }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Firstname</th>
                            <td>{{ user.firstname }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Phone</th>
                            <td>{{ user.phone }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Is Verified</th>
                            <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th scope="row">Created Date</th>
                            <td>{{ user.createdDate ? user.createdDate|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="mt-3">
                    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                {{ include('user/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
