{% extends 'base.html.twig' %}

{% block title %}E-com - Register{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-6">
             <h3 class="my-3 font-weight-normal">Veuillez vous inscrire :</h3>
            {{ form_errors(registrationForm) }}

            {{ form_start(registrationForm) }}
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Password</label>
                    {{ form_widget(registrationForm.password, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <label for="inputLastName" class="form-label">Last Name</label>
                    {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <label for="inputFirstName" class="form-label">First Name</label>
                    {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    <label for="inputPhone" class="form-label">Phone</label>
                    {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary">Register</button>

                <p class="mt-3">
                    Si vous avez un compte <a href="{{ path('app_login') }}">connectez-vous !</a>
                </p>
            {{ form_end(registrationForm) }}
        </div>
    </div>

</div>
{% endblock %}
