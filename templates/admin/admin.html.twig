{% extends 'base.html.twig' %}

{% block title %}Admin - Dashboard{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-5">Dashboard Administrateur</h1>

    <div class="card mt-4">
        <div class="card-header">
            Ajouter un Produit
        </div>
        <div class="card-body">
            <form>
                <div class="mb-3">
                    <label for="productName" class="form-label">Nom du Produit</label>
                    <input type="text" class="form-control" id="productName" placeholder="Nom du Produit">
                </div>
                <div class="mb-3">
                    <label for="productPrice" class="form-label">Prix du Produit</label>
                    <input type="text" class="form-control" id="productPrice" placeholder="Prix du Produit">
                </div>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </form>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            Modifier un Produit
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Produit 1</td>
                        <td>$10</td>
                        <td><button class="btn btn-sm btn-warning">Modifier</button></td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Produit 2</td>
                        <td>$20</td>
                        <td><button class="btn btn-sm btn-warning">Modifier</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
