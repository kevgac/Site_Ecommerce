{% extends 'base.html.twig' %}

{% block title %}Admin - Dashboard{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mt-5">Dashboard Administrateur</h1>
    <div class="card mt-4">
        <div class="card-header">
            Utilisateurs
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Email</th>
                        <th scope="col">Téléphone</th>
                        <th scope="col">Date de création</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <th scope="row">{{ user.id }}</th>
                        <td>{{ user.firstname }} {{ user.lastname }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.createdDate|date('Y-m-d H:i:s') }}</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}
